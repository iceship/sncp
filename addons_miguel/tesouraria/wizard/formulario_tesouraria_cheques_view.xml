<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="formulario_tesouraria_cheques_view" model="ir.ui.view">
            <field name="model">formulario.tesouraria.cheques</field>
            <field name="arch" type="xml">
                <form string="Cheques" version="7.0">
                    <div style="width:500px;">
                    <group colspan="4">
                        <field name="numero_inicial" required="1"/>
                        <field name="numero_final" required="1"/>
                        </group>
                    <footer>
                        <div align="left" style="width:500px">
                            <button name="criar_cheques" type="object" string="Criar cheques" />
                            <button name="descartar" type="object" string="Descartar"/>
                        </div>
                    </footer></div>
                </form>
            </field>
        </record>
	</data>
</openerp>